  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "npm run success-message",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,html}": [
